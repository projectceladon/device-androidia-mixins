on post-fs-data
    chmod 0660 /data/misc/wifi/p2p_supplicant.conf
    setprop wifi.interface wlan0
    setprop wifi.direct.interface p2p-dev-wlan0
    setprop ro.boot.wificountrycode IN

on zygote-start
    # Create the directories used by the Wireless subsystem
    mkdir /data/vendor/wifi 0771 wifi wifi
    mkdir /data/vendor/wifi/wpa 0770 wifi wifi
    mkdir /data/vendor/wifi/wpa/sockets 0770 wifi wifi

service dhcpcd_wlan0 /system/bin/dhcpcd -ABDKL
    class main
    user wifi
    group wifi system dhcp inet
    disabled
    oneshot

service apcreate /vendor/bin/iw phy phy0 interface add wlan1 type __ap
    user root
    group root shell
    disabled
    oneshot

on property:sys.boot_completed=1
    start apcreate

service iprenew_wlan0 /system/bin/dhcpcd -n
    class main
    user wifi
    group wifi system dhcp inet
    disabled
    oneshot

service dhcpcd_p2p /system/bin/dhcpcd -aABKL
    user wifi
    group wifi system dhcp inet
    disabled
    oneshot

service iprenew_p2p /system/bin/dhcpcd -n
    user wifi
    group wifi system dhcp inet
    disabled
    oneshot

service load_iwl_modules /vendor/bin/load_iwl_modules.sh
    user system
    group system shell
    capabilities SYS_MODULE MKNOD
    oneshot
    disabled

on early-boot
    start load_iwl_modules

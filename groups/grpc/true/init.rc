on boot && property:vendor.aaf.mounted=1
    start civ_powerctl
    start civ_applauncher

on property:sys.boot_completed=1 && property:vendor.aaf.mounted=1
    exec - system system -- /vendor/bin/civ_startup_notify

service civ_powerctl /vendor/bin/civ_powerctl
    user system
    group system

service civ_applauncher /vendor/bin/civ_applauncher
    user system
    group system

update_graphics() {
case "$(cat /proc/fb)" in
        *i915)
                echo "intel"
                setprop vendor.hwcomposer.set drm_minigbm
                setprop vendor.gralloc.set intel
                setprop vendor.hwcomposer.edid.all 0
                ;;
        *i915drmfb)
                echo "intel"
                setprop vendor.hwcomposer.set drm_minigbm
                setprop vendor.gralloc.set intel
                setprop vendor.hwcomposer.edid.all 0
                ;;
        *inteldrmfb)
                echo "intel"
                setprop vendor.hwcomposer.set drm_minigbm
                setprop vendor.gralloc.set intel
                setprop vendor.hwcomposer.edid.all 0
                ;;
        *virtiodrmfb)
                echo "virtio-gpu"
                setprop vendor.hwcomposer.set drm_minigbm
                setprop vendor.gralloc.set intel
                ;;
        *virtio_gpudrmfb)
                echo "virtio-gpu"
                setprop vendor.hwcomposer.set drm_minigbm
                setprop vendor.gralloc.set intel
                setprop vendor.gles.set softpipe
                ;;
        *virtio_gpu)
                echo "virtio-gpu"
                setprop vendor.hwcomposer.set drm_minigbm
                setprop vendor.gralloc.set intel
                setprop vendor.gles.set softpipe
                ;;
        *)
                echo "sw rendering"
                setprop vendor.egl.set swiftshader
                setprop vendor.hwcomposer.set drm_minigbm
                setprop vendor.gralloc.set intel
                ;;
esac
}
update_graphics

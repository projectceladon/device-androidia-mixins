update_graphics() {
case "$(cat /proc/fb)" in
        *i915drmfb)
                echo "intel"
                setprop vendor.hwcomposer.set intel
                setprop vendor.gralloc.set intel
                setprop vendor.hwcomposer.edid.all 0
                ;;
        *inteldrmfb)
                echo "intel"
                setprop vendor.hwcomposer.set intel
                setprop vendor.gralloc.set intel
                setprop vendor.hwcomposer.edid.all 0
                ;;
        *virtiodrmfb)
                echo "virtio-gpu"
                setprop vendor.hwcomposer.set remote
                setprop sys.display.size 540x960
                setprop vendor.gralloc.set intel
                ;;
	*virtio_gpudrmfb)
                echo "virtio-gpu"
                setprop vendor.hwcomposer.set remote
                setprop sys.display.size 540x960
                setprop vendor.gralloc.set intel
                ;;
        *)
                echo "sw rendering"
                setprop vendor.egl.set swiftshader
                setprop vendor.hwcomposer.set default
                setprop vendor.gralloc.set default
                ;;
esac
}
update_graphics
